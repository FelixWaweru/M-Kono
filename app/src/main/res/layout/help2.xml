<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment"
    android:background="#B3f5f5f5">
    <ScrollView
        android:id="@+id/mainscrollableContents"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:fontFamily="sans-serif-light"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="1. First connect your phone to the prosthetic using the USB Cable"
                />
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:background="#1A000000"
                android:id="@+id/relativeLayout">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hand"
                    android:id="@+id/imageView2"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow"
                    android:id="@+id/imageView3"
                    android:layout_alignTop="@+id/imageView2"
                    android:layout_centerHorizontal="true" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/phone"
                    android:layout_alignTop="@+id/imageView3"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/imageView4" />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:fontFamily="sans-serif-light"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="2. Tap the button and speak the following commands to carry out the related actions."
                />
            <TextView
                android:text="OPEN: Opens the hand."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:gravity="left"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:textColor="#C83C49"
                android:id="@+id/textView4" />
            <TextView
                android:text="CLOSE: Closes the hand."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:gravity="left"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:textColor="#C83C49"
                android:id="@+id/textView5" />
            <TextView
                android:text="GREET: Initiates a handshake."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:gravity="left"
                android:textStyle="bold"
                android:textColor="#C83C49"
                android:fontFamily="sans-serif-light"
                android:id="@+id/textView6" />
            <TextView
                android:text="POINT: Makes the index finger point."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:gravity="left"
                android:textStyle="bold"
                android:textColor="#C83C49"
                android:fontFamily="sans-serif-light"
                android:id="@+id/textView7" />
            <TextView
                android:text="GOOD: Gives a thumbs up."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:gravity="left"
                android:textStyle="bold"
                android:textColor="#C83C49"
                android:fontFamily="sans-serif-light"
                android:id="@+id/textView8" />

            <TextView
                android:text="HELP: Opens the help menu."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:gravity="left"
                android:textStyle="bold"
                android:textColor="#C83C49"
                android:fontFamily="sans-serif-light"
                android:id="@+id/textView9"/>

            <Button
                android:text="Back"
                android:textColor="#464647"
                android:onClick="voice"
                android:id="@+id/back"
                android:textSize="24dp"
                android:fontFamily="sans-serif-light"
                android:layout_height="75dp"
                android:layout_width="75dp"
                android:background="@drawable/button"
                android:layout_marginBottom="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="25dp"
                android:layout_gravity="right" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>